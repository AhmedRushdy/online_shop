<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/nav_waiting"
    tools:context=".ui.WaitingFragment">

<!--    <include layout="@layout/customized_app_bar"/>-->
    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:queryHint="search"
        android:gravity="start"
        android:layout_marginVertical="10dp"
        android:paddingStart="5dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/verificaton"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_waiting"></androidx.recyclerview.widget.RecyclerView>
</ScrollView>
</LinearLayout>