<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_bg"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="20dp">
    <ImageView
        android:id="@+id/iv_order_fragment"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="start"
        android:layout_margin="20dp"
        android:src="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/tv_product_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Product Name"
        android:textColor="@android:color/tab_indicator_text"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_order_fragment"
        app:layout_constraintTop_toTopOf="@+id/iv_order_fragment" />


    <TextView
        android:id="@+id/tv_price_order"
        android:layout_width="225dp"
        android:layout_height="43dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="100.0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_order_fragment"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_order" />


</androidx.constraintlayout.widget.ConstraintLayout>